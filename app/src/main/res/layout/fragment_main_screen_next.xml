<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MainScreenNext">

    <ImageView
        android:layout_marginStart="35dp"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_marginTop="40dp"
        android:src="@drawable/arrowblack"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="41dp"
        android:layout_gravity="right"
        android:src="@drawable/shopping_cart" />
    
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginStart="71dp"
        android:layout_width="match_parent"
        android:layout_marginEnd="81dp"
        android:layout_height="35dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:text="Пицца"
                    android:fontFamily="@font/medium"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/cart_button_pressed"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="75dp"
                    android:layout_marginStart="16dp"
                    android:layout_height="match_parent"
                    android:text="Пицца"
                    android:fontFamily="@font/medium"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/pressed_grey"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="75dp"
                    android:layout_marginStart="16dp"
                    android:layout_height="match_parent"
                    android:text="Пицца"
                    android:fontFamily="@font/medium"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/pressed_grey"/>
            </LinearLayout>

        </HorizontalScrollView>


    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        tools:listitem="@layout/main_screen_recycler_item"/>

</FrameLayout>