<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_back">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ваш заказ успешно\nдоставлен!"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textColor="#333333"
        android:fontFamily="@font/medium"
        android:textSize="12sp"
        android:layout_marginTop="23sp"/>

    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:srcCompat="@drawable/exit"
        android:layout_marginEnd="31dp"
        android:layout_marginTop="25sp"
        android:layout_gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="КАК ВСЁ ПРОШЛО?"
        android:textColor="#333333"
        android:layout_marginTop="64dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/medium"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Мы рады, что вам всё понравилось!"
        android:textColor="#40000000"
        android:layout_marginTop="148dp"
        android:layout_gravity="center_horizontal"/>

    <uz.jamshid.library.ExactRatingBar
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:starCount="5"
        android:layout_marginTop="91dp"
        android:layout_gravity="center_horizontal"
        app:isIndicator="false"
        app:starFillColor="#FE0602"
        app:starSize="96"
        app:starValue="3.5"
        />


    <FrameLayout
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="140dp"
        android:layout_height="25dp"
        android:layout_marginTop="174dp"
        android:layout_marginEnd="154dp"
        android:background="@drawable/cart_button_pressed"
        android:text="Холодная еда"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat"
        android:textSize="10dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="140dp"
        android:layout_height="25dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="154dp"
        android:background="@drawable/background_error"
        android:text="Проблема при оплате"
        android:textColor="#FE0602"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat"
        android:textSize="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="140dp"
        android:layout_height="25dp"
        android:layout_marginTop="174dp"
        android:layout_marginStart="174dp"
        android:background="@drawable/background_error"
        android:text="Ошибка в заказе"
        android:textColor="#FE0602"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat"
        android:textSize="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="140dp"
        android:layout_height="25dp"
        android:layout_marginTop="208dp"
        android:layout_marginStart="174dp"
        android:background="@drawable/background_error"
        android:text="Плохой сервис"
        android:textColor="#FE0602"
        android:textAllCaps="false"
        android:fontFamily="@font/montserrat"
        android:textSize="10dp"/>

    </FrameLayout>


    <EditText
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:hint="Оставить комментарий"
        android:textColorHint="#40000000"
        android:backgroundTint="#D7D7D7"
        android:fontFamily="@font/montserrat"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal"
        android:paddingStart="15dp"
        android:layout_marginStart="99dp"
        android:layout_marginEnd="99dp"
        android:layout_marginTop="242dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium"
        android:textSize="14sp"
        android:textColor = "#FF4F00"
        android:text="Связаться с поддержкой"
        android:layout_marginTop="285dp"
        android:layout_gravity="center_horizontal"/>
    
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background = "@drawable/cart_button_pressed"
        android:text="Отправить отзыв"
        android:textAllCaps="false"
        android:fontFamily="@font/medium"
        android:textSize="14sp"
        android:layout_marginTop="338dp"
        android:textColor="@color/white"/>
</FrameLayout>