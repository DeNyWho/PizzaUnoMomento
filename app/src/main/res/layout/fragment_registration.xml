<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Registration">

    <ImageView
        android:layout_marginTop="40dp"
        android:layout_marginStart="48dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/arrow_orange"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="93dp"
        android:gravity="center_horizontal"
        android:text="Подтверждение\nномера\nтелефона"
        android:textSize="24sp"
        android:fontFamily="@font/medium"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите номер телефона"
        android:textColor="#333333"
        android:textSize="14sp"
        android:fontFamily="@font/medium"
        android:layout_marginTop="211dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Правила конфеденциальности"
        android:textColor="#FE0602"
        android:textSize="14sp"
        android:fontFamily="@font/medium"
        android:layout_marginTop="389dp"
        android:layout_gravity="center_horizontal"/>
    
    <View
        android:layout_width="30dp"
        android:layout_height="1dp"
        android:background="#D7D7D7"
        android:layout_marginTop="348dp"
        android:layout_marginStart="116dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+7"
        android:fontFamily="@font/medium"
        android:layout_marginTop="324dp"
        android:textSize="14sp"
        android:layout_marginStart="121dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:background="@drawable/group_54"
        android:layout_marginTop="446dp"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#D7D7D7"
        android:layout_marginStart="157dp"
        android:layout_marginTop="312dp"
        android:layout_marginEnd="113dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:hint="0000000000"
        android:textColorHint="#33333333"/>

</FrameLayout>