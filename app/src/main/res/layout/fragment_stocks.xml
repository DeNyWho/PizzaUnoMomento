<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".fragments.stocks">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/shutterstock_724620829_30bacd0_1"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/shutterstock_724620829_30bacd0_2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="30dp"
        android:text="Набор для\nприготовления мини-\nпиццы пепперони\nсвоими руками"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:fontFamily="@font/montserrat"
        android:textStyle="bold"/>
    
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="102dp"
        android:layout_marginTop="132dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/stocks_button"
        android:layout_height="49dp"
        android:text="Добавить\nв корзину"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="14sp"/>
    
    <ImageView
            android:id="@+id/back_menu"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/arrow_2"
        android:layout_marginTop="40dp"
        android:layout_marginStart="48dp"/>
    
    <ImageView
            android:id="@+id/cart"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/shopping_cart_3"
        android:layout_marginEnd="43dp"
        android:layout_marginTop="38dp"
        android:layout_gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Набор для пиццы"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="231dp"
        android:fontFamily="@font/montserrat"
        android:layout_marginStart="46dp"/>

    <TextView
        android:layout_width="241dp"
        android:layout_height="45dp"
        android:textColor="#333333"
        android:layout_marginTop="257dp"
        android:layout_marginStart="46dp"
        android:textSize="12sp"
        android:fontFamily="@font/montserrat"
        android:text='Набор "Очумелые ручки" = 200 руб.\nПопробуй приготовить классическую\nПепперони своими руками'/>

    <TextView
        android:layout_marginTop="309dp"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="34dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Рецепт мини-пиццы:\n- раскатайте тесто диаметром примерно 15 см;\n- смажьте основу соусом равномерно;\n- посыпьте основу с соусом сыром моцарелла и выложите кусочки Пепперони;\n- поставьте в духовку 220 градусов примерно\nна 7 минут.\nПроверяйте по готовности, потому что у всех\nразные печи и каждый по своему любит\nготовить\n\nПриготовить с ребенком совместное блюдо\nили доверить ему самостоятельное\nприготовление, приобщить супруга к готовке\nили просто развеяться от скуки новым\nрецептом - попробуйте набор созданный\nспециально для ДОМА."/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="230sp"
        android:layout_marginEnd="61dp"
        android:layout_gravity="right"
        android:text="200₽"
        android:textColor="#FE0602"/>

</FrameLayout>